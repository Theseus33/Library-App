<h1 class="myTitle"> Readit </h1>
<%-# welcome page for user login -%>
<div class="text-center">
<h2> Sign In! </h2>

<%= form_for :user, url: session_path do |form| %>
  <%= form.text_field :username, placeholder: 'Username', required: true %>
  <%= form.password_field :password, placeholder: 'password', required: true %>

  <%= submit_tag 'Sign in!' %>
<% end %>

<br>
New user? <%= link_to 'Create an account', new_user_path %>
</div>