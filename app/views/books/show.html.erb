<div class="row">
    <div class="col-md-4">
        <%= image_tag @book.book_img.url(:book_show), class: "showBook" %>
    </div>
    
    <div class="col-md-8">
        <h1> <%= @book.title %> </h1>
        <h3> Author: <%= @book.author %> </h3>
        <h3> Genre: <%= @book.category.name %></h3>
        <h3> Average Rating </h3>
        <div class="average-review-rating" data-score=<%= @average_review%>></div>
        <span><%= @book.reviews.count %> total reviews</span>
        <p> <%= @book.description%> </p>
    </div>

</div>

<%= link_to "Home", root_path %>

    <div class="row">

        <div class="col-md-8 pull-right">
            <%= render @book.reviews %>
            <div>
                <%= link_to "Add Review", new_book_reviews_path(@book) %>
            </div>

        </div>
    </div>


<% if current_user %>
    <% if @book.user_id == current_user.id %>
        <%= link_to "Edit", edit_book_path(@book) %>
        <%= link_to "Delete", book_path(@book), method: :delete %>
    <% end %> 
<% end %>  


<script>
    $('.review-rating').raty({
        readOnly: true,
        score: function() {
            return $(this).attr('data-score');
        },
        path: '/assets/'
    });
</script>

<script>
    $('.average-review-rating').raty({
        readOnly: true,
        path: '/assets/',
        score: function() {
            return $(this).attr('data-score')
        }
    });
</script>