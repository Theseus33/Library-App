<%-# multipart allows for paperclip to work -%>
<%-# simple form gem allows for creation of forms using the following format -%>
<%= simple_form_for @book, :html => { :multipart => true } do |f| %>
    <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select a Genre")%>
    <%= f.file_field :book_img %>
    <%= f.input :title, label: "Book Title" %>
    <%= f.input :description, label: "Description" %>
    <%= f.input :author, label: "Author" %>
    <%= f.button :submit %>
<% end %>